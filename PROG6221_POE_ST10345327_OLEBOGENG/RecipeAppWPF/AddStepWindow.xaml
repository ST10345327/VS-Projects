<Window x:Class="RecipeAppWPF.AddStepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Step" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="StepTextBox" PlaceholderText="Enter Step" Margin="5"/>
            <Button x:Name="SaveStepButton" Content="Save Step" Click="SaveStepButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
